import java.util.Scanner;
 
public class Salary {
    static double hours;

   
    public static void main(String[] args) {
      Scanner money = new Scanner(System.in);
      System.out.println("Enter your working hours");
      
     hours= money.nextInt();
     
     if(hours>=7&&hours<=8){
         System.out.println("Your salary is Ksh 10000");}
     
      else if(hours>=9)
          System.out.println("Your are special, come to my office ");
     
     else if(hours>=6&&hours<=7)
          System.out.println("Your salary is Ksh 8000");
     
      else if(hours>=5&&hours<=6)
          System.out.println("Your salary is Ksh 6000");
     
     else if(hours>=4&&hours<=5)
          System.out.println("Your salary is Ksh 4000");

          else if(hours>=2&&hours<=4)
          System.out.println("Your salary is Ksh 2600");
     
     
    else
          System.out.println("you better find for another job BULLSHIT!!");
     
     }
       
    }
    


